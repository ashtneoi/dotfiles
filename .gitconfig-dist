[core]
	editor = vim
[push]
	default = simple
[user]
	name = NAME
	email = EMAIL
[color]
	ui = true
[diff]
	tool = meld
[alias]
	amend = commit --amend --no-edit
	br = "!f() { git branch --list -r $1/'*'; }; f"
	co = checkout
	conflicts = diff --name-only --diff-filter=U
	down = !git pull --ff-only
	downr = !git pull --rebase
	h = rev-parse HEAD
	lg = log --graph --all --decorate
	# Courtesy of Andrew Berry; seen on http://www.lullabot.com/blog/article/handling-git-pull-automatic-merges
	lg2 = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ci) %C(bold blue)<%an>%Creset' --abbrev-commit
	pu = "!f() { [ $# -ge 1 ] || { echo wrong && return; }; git push --set-upstream $1 $(git rev-parse --abbrev-ref HEAD); }; f"
	s = status -bs -uno
	sl = status -b -uno
	temp = !git commit -am 'temp '$(date -Is)
	trash = clean -dxn
	untracked = ls-files --others --exclude-standard --directory
[merge]
	conflictstyle = diff3
